package OOT;

import OOT.Feld.FeldStatus;
import java.util.LinkedList;

public class Game {
	
	public LinkedList<Spieler> spieler = new LinkedList<Spieler>();
	
	/**
	 * Prüft ob ein Eingabestring valid ist
	 * @param input	Eingabe
	 * @return	true/false
	 */
	public static boolean isValid(String input){
		if(input.matches("E[123]\\d\\d")){
			return true;
		}else{
			return false;
		}
	}
	
	
	public static void main(String[] args){
		System.out.println(isValid("E322"));
	}
	
	/**
	 * Überprüft ob das Spiel noch läuft
	 * @return true/falses
	 */
	public boolean isRunning(){		
		for(Spieler s : this.spieler){
			for(Brett b : s.getEbenen()){
				for(Feld f : b.getFelder()){
					if(f.getFeldStatus() == FeldStatus.schiff){
						return true;
					}
				}
			}
		}
		return false;
	}
	
	/**
	 * Fügt einen Spieler zum Spiel hinzu
	 * @param s	Spieler
	 */
	public void addSpieler(Spieler s){
		this.spieler.add(s);
	}
	
	
}
