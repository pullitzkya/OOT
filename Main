package OOT;

import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {

		
			makeMenu();
		

	}

	public static void makeMenu() {
	
		int eingabe;
		
		System.out.println("------------------- Menue -------------------");
		System.out.println("1: Spielerauswahl");
		System.out.println("2: Spiel beenden");
			
		Scanner scanner = new Scanner(System.in);
		eingabe = scanner.nextInt();
		
		boolean beende = false;
		while (!beende){
			switch (eingabe) {
			case 1:
				System.out.println("1. Spieler vs Spieler");
				System.out.println("2. Spieler vs Computer");
				System.out.println("3. Computer vs Computer");
				eingabe = scanner.nextInt();
				switch (eingabe) {
				
				case 1:  // 1. Spieler vs Spieler
					System.out.println("1. Spieler 1 beginnt");
					System.out.println("2. Spieler 2 beginnt");
					eingabe = scanner.nextInt();
					switch (eingabe) {
					case 1:
						spielerEinsStart();
						break;
					case 2:
						spielerZweiStart();
						break;
					default:
						break;
					}
					starteSpiel();
					break;
				case 2: // 2. Spieler vs Computer
					System.out.println("1. Spieler beginnt");
					System.out.println("2. Computer beginnt");
					eingabe = scanner.nextInt();
					switch(eingabe){
					case 1: // Spieler beginnt
						System.out.println("1. Schwierigkeit : Einfach");
						System.out.println("2. Schwierigkeit : Normal");
						System.out.println("3. Schwierigkeit : Schwer");
						eingabe = scanner.nextInt();
						switch(eingabe){
						case 1: // Einfach
							System.out.println("EASYYYYYYYYYYYYYYYYY");
							starteSpiel();
							break;
						case 2: // Normal
							System.out.println("Normallllll");
							starteSpiel();
							break;
						case 3:  // Schwer
							System.out.println("UFPASSSE");
							starteSpiel();
							break;
						default:
							break;
						}
					break;
					case 2: // Computer beginnt
						System.out.println("1. Schwierigkeit : Einfach");
						System.out.println("2. Schwierigkeit : Normal");
						System.out.println("3. Schwierigkeit : Schwer");
						eingabe = scanner.nextInt();
						switch(eingabe){
						case 1: // Einfach
							System.out.println("EASYYYYYYYYYYYYYYYYY");
							starteSpiel();
							break;
						case 2: // Normal
							System.out.println("Normallllll");
							starteSpiel();
							break;
						case 3:  // Schwer
							System.out.println("UFPASSSE");
							starteSpiel();
							break;
						default:
							break;
						}
					}
					break;
				case 3: // 3. Computer vs Computer
					System.out.println("1. Computer 1 beginnt");
					System.out.println("2. Computer 2 beginnt");
					eingabe = scanner.nextInt();
					switch(eingabe) {
					case 1:  // Computer1 beginnt
						System.out.println("1. KI Stärke : Einfach ");
						System.out.println("2. KI Stärke : Normal");
						System.out.println("3. KI Stärke : Schwer");
						eingabe = scanner.nextInt();
						switch(eingabe){
						case 1: // KI Easy
							System.out.println("EASYY");
							starteSpiel();
							break;
						case 2: // KI Normal
							System.out.println("Normal");
							starteSpiel();
							break;
						case 3: // KI Schwer
							System.out.println("Hardddd");
							starteSpiel();
							break;
						default:
							break;
						}
					break;
					case 2: // Computer2 beginnt
						System.out.println("1. KI Stärke : Einfach ");
						System.out.println("2. KI Stärke : Normal");
						System.out.println("3. KI Stärke : Schwer");
						eingabe = scanner.nextInt();
						switch(eingabe){
						case 1: // KI Easy
							System.out.println("EASYY");
							starteSpiel();
							break;
						case 2: // KI Normal
							System.out.println("Normal");
							starteSpiel();
							break;
						case 3: // KI Schwer
							System.out.println("Hardddd");
							starteSpiel();
							break;
						default:
							break;
						}
						break;
					default:
						break;
					}
				
				}
			case 2: // Spiel beenden
				beende = true;
				break;
			default:
				break;
			}
		
		if (eingabe == 2)
			
		
		System.out.println("Spiel beendet");
		System.out.println("_____________________________");
		}
		
	}
	
	
	
	public static String starteSpiel() {
		System.out.println("Spiel startet!!!!");
		return null;
	}
	
	public static String spielerEinsStart() {
		System.out.println("Spieler 1 hat den ersten Zug");
		return null;
	}
	
	public static String spielerZweiStart() {
		System.out.println("Spieler 2 hat den ersten Zug");
		return null;
	}

}
